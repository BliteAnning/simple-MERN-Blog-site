<html>
    <%- include('./partials/head.ejs') %>

    <body>
        <%- include('./partials/nav.ejs') %>
                
        <div class="page">
            <h1>All blogs</h1>
            
            <% if (blogs.length > 0) { %>
                <% blogs.forEach(blog => { %>
                    <a class="single" href="/blogs/<%= blog.id %>">
                        <h2 class="title"><%= blog.title %></h2>
                        <p class="snippet"><%= blog.snippet %></p>
                    </a>
                <% }) %>

            <% } else { %>
               <p>There's no blog to post...</p>
            <% } %>
            
        </div>
    </body>
</html>